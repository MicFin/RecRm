<div id="roles-index-container">
  <div class="col-xs-12">
    <h1>Assign Roles</h1>

    <table class="table">
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
          <tr>
            <th>Dietitan</th>
            <% @roles.each do |role| %>
              <th><%=role%></th>
            <% end %>
          </tr>

        <% @dietitians.each do |dietitian| %>
          <tr>
            <td><%= dietitian.email %></td>
            <% @roles.each do |role| %>
              <% if dietitian.has_role? role %>
                <td>YES</td>
              <% else %>
                <td></td>
              <% end %>
            <% end %>
            <td><%= link_to 'Edit', edit_assignments_path(dietitian) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Role', new_role_path %>
  </div>
</div>
