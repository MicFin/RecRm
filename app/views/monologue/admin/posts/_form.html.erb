<%= post.error_messages %>
<%= post.text_area :specs, label:  t(".specs") %>

<%= post.text_field :title, label:  t(".title"), class:  "span6" %>
<%= post.text_field :url, label:  raw(t(".url.caption", default_url: "#{DateTime.now.year}/#{t(".url.generated_title")}", root: monologue.root_path)) %>

<h3>Type of Content</h3> 

<%= post.check_box :tag_list, { :multiple => true }, label: "Article" %>
<%= post.check_box :tag_list, { :multiple => true }, label: "Recipe" %>
<%= post.check_box :tag_list, { :multiple => true }, label: "Meal Plan" %>
<%= post.check_box :tag_list, { :multiple => true }, label: "Pantry List" %>

<%= post.text_area :content, label:  t(".happy_writing"), class:  "span12 ckeditor", id: "post_content" %>


<%= post.collection_select :author_id, @authors, :id,:email, include_blank: true  %>


<%= post.text_field :published_at, label:  t(".publish_on"), data: {datepicker: "datepicker"}, value: post.object.published_at.nil? ? "" : post.object.published_at.strftime("%Y-%m-%d") %>

<h3>Is this for?</h3>
<%= post.text_field :tag_list, label:  raw(t(".major_persona_group")) %>

<h3>Can you be more specific?</h3>
<%= post.text_field :tag_list, label:  raw(t(".sub_persona_group")) %>

<h3>Does this target a common paint point?</h3>
<%= post.text_field :tag_list, label:  raw(t(".pain_points")) %>

<h3>Status:</h3>
<%= post.check_box :nutrition_review, label:  t(".nutrition_review") %>
<%= post.check_box :culinary_review, label:  t(".culinary_review") %>
<%= post.check_box :medical_review, label:  t(".medical_review") %>
<%= post.check_box :marketing_review, label:  t(".marketing_review") %>
<%= post.check_box :editor_approved, label:  t(".editor_approved") %>
<%= post.check_box :published, label:  t(".published") %>

<%= post.collection_select :call_to_action_id, {"Home Page"=> 1, "QOL Landing Page"=> 2, "Provider Landing Page"=>3}, :last, :first, include_blank: true  %>

<div class="form-actions">
  <%= post.button t(".save"), class:  "btn btn-large btn-primary" %> 
  <%= post.button t(".preview"), class: "btn btn-large", type: "button", value: "preview"%>
</div>

<div class="post-preview modal-backdrop hide" data-url="<%=admin_post_preview_url%>" data-toggle="post-preview" data-trigger="button[value='preview']">
  <div class="post-preview-inner">
    <div class="navbar pull-right">
      <div class="navbar-inner">
        <span class="brand"><%=t(".preview")%></span> 
        <a class="btn btn-primary pull-right" data-dismiss="post-preview"><%=t(".close")%></a>
      </div>
    </div>
  </div>
  <iframe src="" name="preview"></iframe>
</div>

<script>
  if($.fn.datepicker.defaults_<%= I18n.locale %>){
    $.fn.datepicker.defaults = $.fn.datepicker.defaults_<%= I18n.locale %>;
  }
  $("#post_tag_list").select2({tags: <%= Monologue::Tag.all.map{|t| t.name }.to_json.html_safe %> });
</script>