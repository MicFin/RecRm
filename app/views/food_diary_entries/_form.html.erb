<%= simple_form_for [food_diary, food_diary_entry],  html: {class: 'form-horizontal', role:"form" }, remote: true do |f| %>
  <%= f.error_notification %>
    <%= f.hidden_field :food_diary_id, value: food_diary.id %>
      <table class="table">
          <thead>
            <tr>
              <th>Consumed at</th>
              <th>Location</th>
              <th>Meal, Formula, Breast Milk, or Beverage</th>

              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <td class="col-xs-3"> <%#= f.input :consumed_at, label: false, as: :datetime, start_year: Date.today.year, end_year: Date.today.year,
                              order: [:month, :day, :year], input_html: {class: "form-control" } %>
              <div class='input-group date' id='datetimepicker'>
                <input type="datetime" data-request-num="1" name="food_diary_entry[consumed_at]" class="form-control" placeholder="Select" />
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar">
                  </span>
                </span>
              </div>
            </td>
            <td><%= f.input :location, label: false, placeholder: "Home" %></td>
            <td> <%= f.input :food_item, label: false, placeholder: "1 cup of food" %></td>

            <td><%= f.button :submit, "Save", class: "btn btn-sm btn-success" %></td>    
 
          </tbody>
        </table>


<% end %>
