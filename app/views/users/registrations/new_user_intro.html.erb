

<%= render "/users/registrations/sign_up_breadcrumbs/sign_up_breadcrumb" %>

<div id="new-user-name-form" class="container col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-inline', method: :put }) do |f| %>
	  <%= devise_error_messages! %>
	  	<div class="row">
	  		<div class="col-xs-12 ">
		  		<div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 form-group">
		  			<h3>Hello </h3>
		  		</div>
				  <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5 form-group">
			    	<label for="first_name">your first name</label>
			      <%= f.input :first_name, autofocus: true, class: "form-control", type: "text", label: false, placeholder: "New" %>
				  </div>
				  <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5  form-group">
			    	<label for="last_name">your last name</label>
			      <%= f.input :last_name, autofocus: true, class: "form-control", type: "text", label: false, placeholder: "Friend" %>
				  </div>
				</div>
			</div>
	  	<div class="row">
	  		<div class="col-xs-12 ">
		  		<div class="col-xs-12 form-group">
		  			<h3>Who is this appointment for? </h3>
		  		</div>
		  		<div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 form-group">
		  		 	<div class="checkbox">
					 		<div class="col-xs-3">
					    	<label>Self</label>
					    </div>
			  		 	<div class="col-xs-2">
					      <input name="appoint-self" id="appointment-self-button" type="checkbox" value="true"> 
				      </div>
					  </div>
		  		</div>
				  <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5 form-group">
			    	<label for="first_name">client first name</label>
			    	<div class="control-group ">
			    		<div class="controls">
			      		<input type='text' autofocus="true" label="false" id="client_first_name" name='client_first_name' placeholder="First">
			      	</div>
			      </div>
				  </div>
				  <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5 form-group">
			    	<label for="last_name">client last name</label>
			 		 	<div class="control-group ">
			    		<div class="controls">
			      		<input type='text' autofocus="true" label="false" id="client_last_name" name='client_last_name'  placeholder="Last">
			      	</div>
			      </div>
				  </div>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-2 col-xs-offset-4">
	  			<%#= f.button :submit, "Next", class: "btn btn-success btn-lg" %>
	  		</div>
				<div class="col-xs-2 col-xs-offset-1">
	  			<%= f.button :submit, "Next", class: "btn btn-success btn-lg" %>
	  		</div>
	  	</div>
	<% end %>
</div>
<%= render "/users/registrations/modal_user_intro" %>