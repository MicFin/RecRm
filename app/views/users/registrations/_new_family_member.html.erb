	<div id="new-user-options" class=" col-xs-8 alert alert-success">
			<%= simple_form_for(@new_user, :url => create_family_member_path, remote: true) do |f| %>
		<div id="top-container" class="col-xs-12 text-center">
			<%= render "users/registrations/forms/name_form", f: f  %>
		</div>
		<%= render "users/registrations/forms/new_user_nutrition_tabs", f: f %>
		<!-- Tab panes -->
		<div class="tab-content">
		  <div role="tabpanel" class="tab-pane fade in active" id="general">
       	<div class="col-xs-12 text-left">
				  <div class="row form-group">
				  	<div class="col-xs-2">
			     		<%= label_tag :birth_date, "Birth Date:" %>
			     	</div>
			     	<div class="col-xs-10">
			      	<%= f.date_select :date_of_birth, prompt: { day: 'Day', month: 'Month', year: 'Year' }, start_year: Date.today.year, end_year: 1910, :class => "date-select" %>
			    	</div>
			    </div>
			    <div class="row form-group">
				  	<div class="col-xs-2">
			     		<%= label_tag :height_inches, "Height:" %>
			     	</div>
			     	<div id="height-attributes" class="col-xs-10">
			        <div class="col-xs-2">
			          <input type="number" name="user[height][feet]" placeholder="4" style="padding-left: 10%" /> 
			        </div>
			        <div class="col-xs-2">
			          <%= label_tag :feet, "feet"%>
			        </div>
			        <div class="col-xs-2">
			          <input type="number" name="user[height][inches]" placeholder="11" style="padding-left: 10%" /> 
			        </div>
			        <div class="col-xs-2">
							  <%= label_tag :inches, "inches"%>
			        </div>
		        </div>
		      </div>
		      <div class="row form-group">
				  	<div class="col-xs-2">
			     		<%= label_tag :weight_ounces, "Weight:" %>
			     	</div>
			     	<div id="weight-attributes" class="col-xs-10">
				     	<div class="col-xs-2">
			        	<%= f.input :weight_ounces, label: false, placeholder: "110" %>
			        </div>
		        	<div class="col-xs-2">
							  <%= label_tag :inches, "pounds"%>
			        </div>
		        	<div class="col-xs-6">
							  <p>(16 ounces in 1 pound)</p>
			        </div>
		        </div>
		      </div>
		      <div class="row form-group">
				  	<div class="col-xs-2">
			     		<%= label_tag :sex, "Sex:" %>
			     	</div>
			     	<div class="col-xs-10">
		        	<%= f.input :sex, :collection => [["Female", "Female"], ["Male", 'Male']], :label_method => :last, :value_method => :first ,as: :radio_buttons, :item_wrapper_class => 'radio-inline', label: false %>
		        </div>
		      </div>
			    <p><button id="new-user-allergies-button" class="btn btn-link">Next nutrition category</button></p>
      	</div>
		  </div>
			<%=render "users/registrations/forms/allergies", f: f %>
			<%= render "users/registrations/forms/intolerances", f: f %>
			<%= render "users/registrations/forms/diseases", f: f %>
			<%= render "users/registrations/forms/diets", f: f %>
			<%= render "users/registrations/forms/more", f: f %>
		</div>
		<div id="bottom-button-container" class="col-xs-12 text-center">
			<div class="col-xs-8 text-right">
				<p>Complete this nutrition profile</p>
			</div>
			<div class="col-xs-2">
	  			<%= f.button :submit, "Save", class: "btn btn-success btn-block" %>
			</div>
		</div>
	<% end %>
	</div>