<h1>Upcoming appointments</h1>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Client ID</th>
        <th>Cliet Name</th>
        <th>Patient Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Dietitian</th>
        <th>Duration</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% upcoming_appointments.each do |appointment| %>
        <tr class="appt-id" data-appt-id="<%=appointment.id%>">
          <td><%= link_to appointment.start_time.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y %I:%M %p"), appointment_path(appointment) %></td>
          <td><%= appointment.appointment_host.id%></td>
          <td><%= "#{appointment.appointment_host.first_name} #{appointment.appointment_host.last_name}" %></td>
          <td><%= appointment.patient_focus.first_name%></td>
          <td><%= appointment.appointment_host.phone_number%></td>
          <td><%= appointment.appointment_host.email%></td>
          <td><%= appointment.dietitian.signature %></td>
          <td><%= appointment.show_duration%></td>
          <!--        <td><%#= appointment.created_at.strftime("%B %d, %Y %I:%M %p") %></td> -->            
          <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
          <td><%= link_to 'Delete', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>