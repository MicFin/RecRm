<% if @possible_review_conflicts %>
  <% if @possible_review_conflicts["step-#{step.id}"].id %>
    <% @item = "step-#{step.id}" %>
    <% @review_conflict = @possible_review_conflicts[@item] %>
    <% @step_changes_hash = @review_conflict.step_changes_hash %>
  <% end %>
<% else %>
  <% @step_changes_hash ||= @review_conflict.step_changes_hash %>
<% end %>



<% if @review_conflict.risk_level == 100 %>
  <div id="<%=@item%>" class="col-xs-12 form-group alert alert-info">
    <h4>Low Risk</h4>
<% elsif @review_conflict.risk_level == 200 %>
  <div id="<%=@item%>" class="col-xs-12 form-group alert alert-warning">
    <h4>Medium Risk</h4>
<% elsif @review_conflict.risk_level == 300 %>
<div id="<%=@item%>" class="col-xs-12 form-group alert alert-danger">
    <h4>High Risk</h4>
 
<% end %>
    <label>Step</label>
    <h4 class="step-preview">Suggestion #1:</h4>
    <p>Step Group: <%= @step_changes_hash[:step_group_name]%></p>
    <p>Directions: <%=@step_changes_hash[:directions]%> </p>
    <p>Ingredients: <%= @step_changes_hash[:ingredients]%> </p>
    <p class="form-group"><%= @review_conflict.first_reviewer_notes %></p>
    <% if @review_conflict.second_reviewer_id %>
      <h4 class="step-preview">Suggestion #2:</h4>
      <p>Step Group: <%= @step_changes_hash_two[:step_group_name]%></p>
      <p>Directions: <%=@step_changes_hash_two[:directions]%> </p>
      <p>Ingredients: <%= @step_changes_hash_two[:ingredients]%> </p>
      <p>Notes: <%= @review_conflict.second_reviewer_notes %></p>
    <% end %>
    <% if @review_conflict.third_reviewer_id %>
      <h4 class="step-preview">Suggestion #3:</h4>
      <p>Step Group: <%= @step_changes_hash_three[:step_group_name]%></p>
      <p>Directions: <%=@step_changes_hash_three[:directions]%> </p>
      <p>Ingredients: <%= @step_changes_hash_three[:ingredients]%> </p>
      <p>Notes: <%= @review_conflict.third_reviewer_notes %></p>
    <% end %>
    <% if @review_conflict.fourth_reviewer_id %>
      <h4 class="step-preview">Suggestion #4:</h4>
      <p>Step Group: <%= @step_changes_hash_four[:step_group_name]%></p>
      <p>Directions: <%=@step_changes_hash_four[:directions]%> </p>
      <p>Ingredients: <%= @step_changes_hash_four[:ingredients]%> </p>
      <p>Notes: <%= @review_conflict.fourth_reviewer_notes %></p>
    <% end %>
    <div class=" col-xs-12 form-group text-center"> 
      <% if @select_reviewer != true %>
        <%= link_to "Edit Changes", edit_recipe_quality_review_review_conflict_path(@quality_reviewable, @quality_review, @review_conflict), class: "btn btn-success btn-lg", id: "basic-form-button", :remote => true%>
      <% end %>
    </div>
  </div>