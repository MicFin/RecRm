
<div class="modal fade" id="paymentModal" tabindex="-1" role="dialog" aria-labelledby="paymentModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="paymentModalLabel"><%=image_tag "/assets/logos/kf-logo-registration.png", class: "img-responsive" %></h4>
      </div>
      
      <div class="modal-body">
        <div class="row form-group">
          <div class="col-xs-12 text-center">
            <h2><%=time_slot.start_time.strftime("%B %d, %Y") %>
            </h2>
            <h2><%=time_slot.start_time.strftime("%l:%M") %> - <%=time_slot.end_time.strftime("%l:%M %p") %>
            </h2> 
          </div>

          <!-- DISCOUNT CODE RESPONSE -->
          <%= show_purchase_cost(user, purchase, purchasable) %>

        </div>

        <!--  PURCHASE FORM -->
        <%= render "purchases/form", user: user, purchase: purchase, purchasable: purchasable, time_slot: time_slot %>

      </div>
    </div>
  </div>
</div>