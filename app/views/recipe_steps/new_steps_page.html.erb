
<%= render "/recipes/new_recipe_breadcrumbs" %>
<div id="recipe-background">
  <div class="container">
    <div class="col-xs-6">
      <div id="new-steps-form" class="form-group">
        <div class=" form-group row text-center">
        <div class="col-xs-12">
          <h2>Add your steps!</h2>
          <p>Some recipes require steps to be divided into groups (like for a recipe that prepares fish and a salad).   Please select the number of groups you need if 1 is not enough.</p>
        </div>
        <div class="col-xs-4"></div>
          <div class="col-xs-4">
            <select id="groups-of-steps-select" class="form-control">
              <option value="one">One Set of Steps</option>
              <option value="two">Multiple Sets of Steps</option>
            </select>
          </div>
        </div>
        <div class="individual-step-form">
            <%= render "new_step_form" %>
        </div>
        <div class="row form-group hidden-form">
          <div class="form-group text-center">
            <p>Finished adding all of your steps?
            </p>
          </div>
          <div class="form-group text-center"> 
          <%= link_to "NEXT", edit_allergens_path(@recipe_id), :class => "btn btn-success btn-lg" %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-6">
      <div id="recipe-essentials-preview">
        <%= render "/recipes/basic_info_show" %> 
        <%= render "/ingredients_recipes/ingredients_recipe_list" %>
        <%= render "steps_list" %>
      </div> <!-- #recipe essentials preview -->
    </div> 
  </div>
</div> 




