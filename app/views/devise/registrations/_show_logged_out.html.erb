									<p class="profile-specialties-item">item 1</p>
									<p class="profile-specialties-item">item 1</p>
									<p class="profile-specialties-item">item 1</p>
								</div>
 							</div>
 						</div>
					</div>
					<div class="profile-content-right-column">
				  	<div class="row">
				  		<div class="profile-content-career-education">
				  			<h3>Education</h3>
							  <p><%= @dietitian.undergraduate_education%></p>
						  	<p><%= @dietitian.graduate_education %></p>
						  </div>
						</div>
				  	<div class="row">
					  	<div class="col-xs-12">
					  		<h3>Clinical Training and Roles</h3>
					  	</div>
					  	<div class="col-xs-12">
					  		<p><%= @dietitian.professional_experience_first %></p>
					  		<p><%= @dietitian.professional_experience_second %></p>
					  		<p><%= @dietitian.professional_experience_third %></p>
