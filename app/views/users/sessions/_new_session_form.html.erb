				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form text-left sign-in-form', role:"form" }) do |f| %>

					<%= render "/layouts/alerts" %>

					<div class="form-group col-xs-8 col-xs-offset-2">
						<label for="first-name">Email</label>
						<%= f.email_field :email, autofocus: true, class: "form-control", type: "email", placeholder: "Enter email" %>
					</div>

					<div class="form-group col-xs-8 col-xs-offset-2">
						<label for="password">Password</label>
						<%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password", type: "password" %>
					</div>

					<div class="col-xs-8 col-xs-offset-2 text-center">
					  <div class="checkbox">
					    <label>
					      <input type="checkbox"><span class="white-font"> Remember </span>
					    </label>
					  </div>
					  <%= f.button :submit, "Sign In", class: "btn btn-primary btn-lg", type: "submit" %>
					</div>
					
					<div class="col-xs-12 text-center">
					<%#= render "users/shared/links" %>
						<!-- 				snippet from shared/links, should be made into a partial -->
						<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'  %>
						  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
						<% end -%>
						<!-- 				snippet from shared/links, should be made into a partial -->
					</div>

				<% end %>