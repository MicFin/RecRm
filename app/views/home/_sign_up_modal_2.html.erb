



<div class="modal fade" id="signUpModal" tabindex="-1" role="dialog" aria-labelledby="signUpModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
<!-- 		no modal header -->
			<div class="modal-body">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title" id="signUpModalLabel"><%=image_tag "/assets/nav_images/logo.png", class: "img-responsive" %></h4>
	
				<div class="col-xs-12">
			    <%= simple_form_for(@new_user, as: "user", url: user_registration_path, html: {class: 'form-inline col-xs-12', role:"form" }) do |f| %>
						<%= render "/layouts/alerts" %>
						<h1 class="form-group">Join the community!</h1>
						<h4 class="form-group">To receive updates on our public launch or to request early access to our solution, let us know who you are and how to reach you:</h4>
						<div class="col-xs-6 form-group form-fields">
			      	<%= f.email_field :first_name, autofocus: true, class: "form-control", type: "text", placeholder: "First Name" %>
			      </div>
						<div class="col-xs-6 form-group form-fields">
			      	<%= f.email_field :last_name, autofocus: true, class: "form-control", type: "text", placeholder: "Last Name" %>
			      </div>
						<div class="col-xs-12 form-group form-fields">
			      	<%= f.email_field :email, autofocus: true, class: "form-control", type: "email", placeholder: "Email Address" %>
			      </div>
			      <input name="user[home_page]" value="true" type="hidden">
						<div class="col-xs-12 checkbox form-group">
							<h4>
							    <label>
							      <input name="user[early_access]" value="true" type="checkbox"> Yes, I'd love early access to Kindrdfood!
							    </label>
							</h4>
						</div>
				    <div class="col-xs-8 col-xs-offset-2 form-group">
					  	<%= f.button :submit, "Join Us!", class: "btn btn-success btn-sign-up", type: "submit" %>
					  </div>
					<% end %>
					<!-- </form> -->
				</div>
			</div>
			<div class="modal-footer">
				<div class="actions">
				</div>
			</div>
		</div>
	</div>
</div>