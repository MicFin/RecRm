			<%= render "users/registrations/forms/name_form", f: f  %>
			<a href="#" id="remove-new-family-member-button">
				<span class="glyphicon glyphicon-remove" data-toggle="tooltip" data-placement="bottom" title="remove"></span>
			</a>
		</div>
		<!-- Tab panes -->
		<div class="tab-content">
		  <div role="tabpanel" class="tab-pane fade in active" id="general">
       	<div class="col-xs-12 text-left">
	      	<div class="row form-group">
			      <div class="col-xs-12">
				      <label>Relation to You</label>
