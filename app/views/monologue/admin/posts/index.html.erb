<div class="row">
  <h1>Completed Not Published</h1>
  <div class="col-xs-12">
    <h3>Published Public</h3>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th><%= t(".title")%></th>
          <th><%= t(".type")%></th>
          <th>Created At</th>
          <th><%= t(".assigned_to")%></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post|%>
          <tr>
            <td><%= link_to post.title, edit_admin_post_path(post) %></td>
            <td><%= post.content_type %></td>
            <td><%= post.user.created_at %> </td>
            <td><span><%= post.user.email %></span> </td>
            <td><%= link_to t(".edit"), edit_admin_post_path(post), class: "btn btn-small" %></td>
            <td><%= link_to t(".delete"), [:admin, post],data: {confirm: 'Are you sure?'}, method: :delete, class: "btn btn-small btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>














<% if @page %>
  <%= render partial: "pagination" %>
<% end %>