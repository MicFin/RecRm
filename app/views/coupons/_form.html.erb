<%= simple_form_for(@coupon) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :description %>
    <%= f.input :valid_from %>
    <%= f.input :valid_until %>
    <%= f.input :redemption_limit %>
    <%= f.input :redemption_limit_per_user %>
    <%= f.input :amount %>
    <%= f.input :amount_type %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
