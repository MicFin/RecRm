<div id="family-page" class="container-fluid">
    <div class="row">

      <%= render "/layouts/navbars/user_nav" %>

      <main class="col-xs-10 col-xs-offset-2">
        <section class="alerts-container">
          <%= render "/layouts/alerts" %>
        </section>
        <div class="col-xs-2">
          <%= link_to "back to family", family_path(@family) %>
          <%= image_tag "icons/add_user_photo.png" %>
        </div>
        <div class="col-xs-10">
          <section>
            <h1>New Family Member</h1>
          </section>
          <hr>
          <section class="row">
            <div class="col-xs-12">
          
              <%= simple_form_for(@family_member,  :url => {:controller => 'users/registrations', :action => 'create_family_member'}, html: { class: 'col-xs-12 text-left', role:"form"}) do |f| %>
                <h3>Background</h3>

                <input type="hidden" name="family_member" value="true">

                <%= render '/welcome/add_family/family_member_edit_info_form_fields', {f: f, family_member: @family_member}%>


                <h3>Health and Nutrition</h3>

                <%= render '/welcome/add_nutrition/nutrition_form_fields', f: f %>

                <%= render '/welcome/add_preferences/preferences_form_fields', f: f %>




                <div class="actions text-right">
                
                  <%= f.button :submit, "Save", class: "btn btn-primary btn-lg" %>
                </div>
              <% end %>


            </div>
          </section>
        </div>
      </main>
      <div class="col-xs-10 col-xs-offset-2">
        <%=render "/layouts/footers/main_footer" %>
      </div>
    </div>
  </div>
