<h1>Listing coupons</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th>Valid from</th>
      <th>Valid until</th>
      <th>Redemption limit</th>
      <th>Redemptions count</th>
      <th>Amount</th>
      <th>Type</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td><%= coupon.code %></td>
        <td><%= coupon.description %></td>
        <td><%= coupon.valid_from %></td>
        <td><%= coupon.valid_until %></td>
        <td><%= coupon.redemption_limit %></td>
        <td><%= coupon.redemptions_count %></td>
        <td><%= coupon.amount %></td>
        <td><%= coupon.type %></td>
        <td><%= coupon.status %></td>
        <td><%= link_to 'Show', coupon %></td>
        <td><%= link_to 'Edit', edit_coupon_path(coupon) %></td>
        <td><%= link_to 'Destroy', coupon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coupon', new_coupon_path %>
