

<% if @family_member.errors.any? %>
	
	if ( $(".alerts-container").count >= 1){

		// adds error to screen
		$(".alerts-container").html("<%= escape_javascript(render :partial=>'layouts/alerts') %>");

	} else {

		// adds error as pop up
		alert("Can not delete family member's that have appointments assigned to them.")
	}

<% else %>

	// FROM ADD FAMILY SCREEN 
		// Removes users form
		$("#edit_user_<%=@removed_member_id%>").remove();

		// Removes users radio button
		$("#family-member-select-<%=@removed_member_id%>").remove();
		
	// FROM EDIT FMAILY MEMBER SCREEN
	// show container and load partial
	Kindrdfood.ajaxSpecific.ajaxUpdateUrl.showPagePartial("<%= j render(:partial => '/families/show', :locals => { :family=> @family}) %>");

		// adds error to screen
		$(".alerts-container").html("<%= escape_javascript(render :partial=>'layouts/alerts') %>");

<% end %>