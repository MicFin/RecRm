<div id="dietitian-recipes-index-container">
 	<div class="form-group col-xs-12 form-group text-center">
 		<h3>Hooray For Recipes!</h3>
 	</div>
	<div class="col-xs-12 text-center">
		<p><%= link_to image_tag("chef-hat.png", class: "tilt"), :controller => "recipes", :action => "new" %>	</p>
		<p>Create a Recipe</p>
	</div>
	<% if current_dietitian.has_role? "Admin Dietitian" %>
		<h1>ADMIN DIETITIAN ONLY</h1>
		<div class="col-xs-2">
    	<%= link_to "Click For Admin Dashboard", dashboard_path, class: "btn btn-lg btn-success"%>
    </div>
<% end %>
<div id="all-dieitians-dashboard-container" class="col-xs-12">
	<h3 class="dashboard-heading">Complete These Recipes:</h3>
	<div class="row review-recipes" id="incomplete-recipes">

		<% @incomplete_recipes.each do |recipe| %>
		<div class="col-xs-12 col-sm-4 col-md-3 col-lg-3 text-center recipe-mini-view">
			<h4><%=recipe.name%></h4>
				<p>Created on:<p>
				<p><%=recipe.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y %I:%M %p")%> </p>
				<p><%=recipe.ingredients_recipes.count%> ingredients</p>
				<p><%=recipe.recipe_steps.count%> steps</p>
				<p><%=recipe.difficulty%> </p>
			<p><%=link_to "Continue", review_recipe_path(recipe) %></p>

		</div>
		<% end %>
	</div>

<!-- CONFLICTS FOR USER TO COMPLETE -->
	<% if @incomplete_review_conflicts %>
	<h3 class="dashboard-heading">Review these conflicts:</h3>
	<div class="row review-recipes" id="incomplete-recipes">
		<%# @incomplete_review_conflicts.each do |review_conflict| %>
		<div class="col-xs-12 col-sm-4 col-md-3 col-lg-3 text-center recipe-mini-view">
			<h4><%#=review_conflict.quality_review.quality_reviewable.name%></h4>
			<p><%#=review_conflict.category%></p>
			<h3 class="dashboard-heading">Stage: <%#=review_conflict.review_stage%></h3>
			<p><%#=link_to "Review", start_review_conflict_path(review_conflict.quality_review.quality_reviewable, review_conflict) %></p>
		</div>
		<%# end %>
	</div>
	<% end %>

	<h3 class="dashboard-heading">Your Completed Recipes:</h3>
	<div class="row review-recipes" id="current-recipes">
		<% @recipes.each do |recipe| %>
		<div class="col-xs-12 col-sm-4 col-md-3 col-lg-3 text-center recipe-mini-view">
			<h4><%=recipe.name%></h4>
				<p>Created on:<p>
				<p><%=recipe.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y %I:%M %p")%> </p>
				<p><%=recipe.ingredients_recipes.count%> ingredients</p>
				<p><%=recipe.recipe_steps.count%> steps</p>
				<p><%=recipe.difficulty%> </p>
			<p class="alert alert-danger">RECIPE IN REVIEW: VIEW MODE ONLY</p>
			<p><%=link_to "View", recipe_path(recipe) %></p>
		</div>
		<% end %>
	</div>
	<h3 class="dashboard-heading">Browse Other Kindrdfood Recipes:</h3>
	<div class="row review-recipes" id="current-recipes">
		<% @all_completed_recipes.each do |recipe| %>
		<div class="col-xs-12 col-sm-4 col-md-3 col-lg-3 text-center recipe-mini-view">
			<h4><%=recipe.name%></h4>
				<p>Created on:<p>
				<p><%=recipe.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y %I:%M %p")%> </p>
				<p>Created by:<p>
				<p><%=recipe.dietitian.email%> </p>
				<p><%=recipe.ingredients_recipes.count%> ingredients</p>
				<p><%=recipe.recipe_steps.count%> steps</p>
				<p><%=recipe.difficulty%> </p>
			<p class="alert alert-danger">RECIPE IN REVIEW: VIEW MODE ONLY</p>
			<p><%=link_to "View", recipe_path(recipe) %></p>
		</div>
		<% end %>
	</div>
</div>
</div>
