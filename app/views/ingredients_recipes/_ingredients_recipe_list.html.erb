<div id="ingredients-container">
  <div class="row text-center preview-info"> 
    <h3 class="active-preview-heading">Ingredients:</h3>
    <% @ingredients.each do | ingredient | %>
			<div class="col-xs-12">
        <h4 class="ingredient-preview"><%=ingredient.amount%> <%=ingredient.amount_unit%> <%= ingredient.display_name%> (<%=ingredient.ingredient.name%>) 
        	<% if ingredient.main_ingredient == true %>
        		 <span class="main-tag">main</span>
					<% elsif ingredient.optional_ingredient == true %>
					  <span class="main-tag">optional</span>
					<% end %>
        </h4>
      </div>
    <% end %>
  </div>
</div>