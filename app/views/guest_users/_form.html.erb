<%= simple_form_for(@guest_user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :phone_number %>
    <%= f.input :email_address %>
    <%= f.input :title %>
    <%= f.input :company %>
    <%= f.input :purpose %>
    <%= f.input :help %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
