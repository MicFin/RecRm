
<div class="modal fade" id="appointmentPrepModal" tabindex="-1" role="dialog" aria-labelledby="appointmentPrepModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="appointmentPrepModalLabel"><%=image_tag "/assets/nav_images/logo.png", class: "img-responsive" %></h4>
      </div>
      <div class="modal-body">
        <div id="new-user-family-form" class="col-xs-10 col-xs-offset-1">
          <div class="hidden-xs hidden-sm col-md-4 col-lg-4 form-group">
            <div class="col-xs-12">
              <h3>Who eats at your table?</h3>
                <div id="family-member-list">

                  <%@family_members.each do |family_member|%>
                    <% if family_member == @appointment.patient_focus %>
                      <div id="family-member-<%=family_member.id%>" data-id="<%=family_member.id%>" class="family-member selected-family-member">
                    <% else %>
                      <div id="family-member-<%=family_member.id%>" data-id="<%=family_member.id%>" class="family-member">
                    <% end %>
                      <h3><%=family_member.first_name%> <%=family_member.last_name%> <button data-family-member-id="<%=family_member.id%>" type="button" class="btn btn-white btn-sm family-member-health-preview">View</button></h3>
                      <% if family_member.patient_groups.count >= 1 %>
                        <%family_member.patient_groups.each do |patient_group| %>
                          <div class="hidden-xs btn btn-white-orange btn-sm">
                            <%= patient_group.name%>
                          </div>
                        <% end %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
            </div>
          </div>
          <div class="row">
            <div id="family-member-pages-tabs" class="col-xs-7 col-xs-offset-5 text-center">
              <div  class="col-xs-4 active-tab">
                <a id="family-member-health-button" href="#">Health</a>
              </div>
              <div class="col-xs-4">
                <a id="family-member-food-button" href="#">Food</a>
              </div>
              <div class="col-xs-4">
                <a id="family-member-life-button" href="#">Life</a>
              </div>
            </div>
          </div>
          <% @family_members.each do |family_member| %>
            <% if family_member == @appointment.patient_focus %>
              <div id="family-member-health-<%=family_member.id%>" class="appt-focus col-xs-12 col-sm-12 col-md-offset-5 col-lg-offset-5 col-md-7 col-lg-7 family-member-health-container alert alert-success">
            <% else %>
              <div id="family-member-health-<%=family_member.id%>" class="appt-focus col-xs-12 col-sm-12 col-md-offset-5 col-lg-offset-5 col-md-7 col-lg-7 family-member-health-container alert alert-success hidden">
            <% end %>
            <div id="top-container" class="col-xs-12 text-center">
              <h3> <%=family_member.first_name %> <%=family_member.last_name %> </h3>
            </div>
            <!-- Tab panes -->
            <div class="tab-content">
              <div role="tabpanel" class="tab-pane fade in active" id="general">
                <div class="col-xs-12 text-left">
                  <% if ( @appointment.appointment_host != family_member)%>
                    <div class="row form-group">
                      <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
                        <label>Relation to Host</label>
                      </div>
                      <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10">
                        <p><%=family_member.family_role%></p>
                      </div>
                    </div>
                  <% else %>
                    <div class="row form-group">
                      <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
                        <label>This is the appointment host</label>
                      </div>
                    </div>
                  <% end %>
                  <div class="row form-group">
                    <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
                      <%= label_tag :birth_date, "Birth Date:" %>
                    </div>
                    <div class="col-xs-10">
                      <%= family_member.date_of_birth %> <%=family_member.age%>
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
                      <%= label_tag :height_inches, "Height:" %>
                    </div>
                    <div id="height-attributes" class="col-xs-10">
                      <div class="col-xs-3 col-sm-2 col-md-2 col-lg-2">
                        <%=family_member.height_hash["feet"]%>/> 
                      </div>
                      <div class="col-xs-3 col-sm-2 col-md-2 col-lg-2">
                        <%= label_tag :feet, "feet"%>
                      </div>
                      <div class="col-xs-3 col-sm-2 col-md-2 col-lg-2">
                        <%=family_member.height_hash["inches"]%>/> 
                      </div>
                      <div class="col-xs-3 col-sm-2 col-md-2 col-lg-2">
                        <%= label_tag :inches, "inches"%>
                      </div>
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
                      <%= label_tag :weight_ounces, "Weight:" %>
                    </div>
                    <div id="weight-attributes" class="col-xs-10">
                      <div class="col-xs-3 col-sm-2 col-md-2 col-lg-2">
                        <%=family_member.weight_hash["pounds"]%>/> 
                      </div>
                      <div class="col-xs-3 col-sm-2 col-md-2 col-lg-2">
                        <%= label_tag :pounds, "pounds"%>
                      </div>
                      <div class="col-xs-3 col-sm-2 col-md-2 col-lg-2">
                        <%=family_member.weight_hash["ounces"]%>/> 
                      </div>
                      <div class="col-xs-3 col-sm-2 col-md-2 col-lg-2">
                        <%= label_tag :ounces, "ounces"%>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-xs-2">
                      <%= label_tag :sex, "Sex:" %>
                    </div>
                    <div class="col-xs-10">
                      <%= family_member.sex %>
                    </div>
                  </div>
                </div>
                <div class="col-xs-12">
                  <hr class="health-group-break-point">
                </div>
                <div class="col-xs-12 form-group">
                  <label>Health Groups</label>
                  <% if family_member.patient_groups.count > 1 %>
                    <% family_member.patient_groups.each do |health_group| %>
                      <div class="btn btn-white-orange btn-sm">
                        <%= health_group.name %>
                      </div>
                    <% end%>
                  <% else %>
                    <p>No health groups</p>
                  <% end %>
                  <% if family_member.unverified_health_groups.count > 1%>
                    <label>Unverified Health Groups</label>
                    <% family_member.unverified_health_groups.each do |health_group| %>
                      <div class="btn btn-white-orange btn-sm">
                        <%= health_group.name %>
                      </div>
                    <% end%>
                  <% end %>
                </div>
                <div class="col-xs-12 form-group">
                  <label>Additional info about <span class="dynamic-user-name"><%=family_member.first_name%></span></label>
                  <p><%=family_member.family_note %></p>
                </div>
              </div>
            </div>
            <div id="bottom-button-container" class="col-xs-12 text-center">
              <div class="hidden-xs hidden-sm col-md-8 col-lg-8 text-right">
                <button class="btn btn-lg btn-success">Next</button>
              </div>
            </div>
          </div><!--  family-member-page -->
          <% end %>
        </div> <!-- user form -->
   
      </div><!--  modal body -->
      <div class="modal-footer">
        <div class="actions">
        </div>
      </div>
    </div>
  </div>
</div>