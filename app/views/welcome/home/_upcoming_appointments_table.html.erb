<h3><span class="glyphicon glyphicon-calendar"></span>Upcoming Appointments</h3>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Appointment Focus</th>
        <th>Duration</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
  		<% if upcoming_appointments.count >= 1 %>
  			<% upcoming_appointments.each do |appointment| %>
  				<tr>	
  					<td><%=appointment.start_time.strftime("%B %d, %Y %I:%M %p") %></td>

        		<td><%= appointment.patient_focus.first_name%></td>
          	<td><%= appointment.show_duration%></td>
          	<%# if appointment.surveys.where(survey_group_id: 1).completed %>
          		<td><%#= link_to "Prep", client_appointment_prep_path(appointment.id), class: "btn btn-sm btn-primary", remote: true%></td>
          	<%# else %>
          		<td><%#= link_to "Prep", client_appointment_prep_path(appointment.id), class: "btn btn-lg btn-danger", remote: true%></td>
          	<%# end %>
        
            	<td><%#= link_to "Join", in_session_room_path(:id => appointment.room_id, appointment: appointment.id), class: "btn btn-xs btn-success" %>
  						</td>
  		
          	<td><button class="btn btn-xs btn-default reschedule-appointment">Reschedule</button></td>
        	</tr>
      
        <% end %>
  		<% else %>
  			<tr>
  				<td>No upcoming appointments.</td>
  			</tr>

      <% end %>
    </tbody>
  </table>
</div>