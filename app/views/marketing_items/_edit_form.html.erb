
<div id="marketing-item-<%=@patient_group_id%>-<%=@item_category%>" class="col-xs-12 col-centered">
  <%= simple_form_for [@marketing_itemable, @marketing_item], :remote => true do |f| %>
    <div class="col-xs-9 form-group">
      <%= f.input :content, label: "Recipe #{@item_category}", input_html: { class: "form-control", placeholder: "Gluten Free Pasta Primavera"} %>
    </div>
    <%= f.hidden_field :category, value: @item_category %>
    <div class="col-xs-3 form-group text-left"> 
      <button type="submit" class=" btn btn-success btn-lg">Update</button>
    </div>
  <% end %>
</div>
