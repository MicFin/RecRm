	<div id="new-user-options" class="appt-focus col-xs-12 col-sm-12 col-md-8 col-lg-8 alert alert-success appt-focus">
		<% updated_user ||= @updated_user %>
		<%= simple_form_for updated_user, :url => {:controller => 'users/registrations', :action => 'update_user_health_groups'}, remote: true do |f| %>
			<input type="hidden" name="updated_user_id" value="<%=updated_user.id%>"/>
		<div id="top-container" class="col-xs-12 text-center">
			<%= render "users/registrations/forms/name_form", f: f %>
			<% if @user != updated_user%>
				<%= link_to remove_family_member_path(@family, updated_user), :data => {:confirm => 'Are you sure?', disable_with: 'removing...'}, method: :delete, remote: true do %>
				<span id="remove-family-member-button" class="glyphicon glyphicon-remove" data-toggle="tooltip" data-placement="bottom" title="remove"></span>
				<% end %>
			<% end %>
		</div>
		<!-- Tab panes -->
		<div class="tab-content">
		  <div role="tabpanel" class="tab-pane fade in active" id="general">
       	<div class="col-xs-12 text-left">
				  <div class="row form-group">
				  	<div class="col-xs-2">
			     		<%= label_tag :birth_date, "Birth Date:" %>
			     	</div>
			     	<div class="col-xs-10">
			      	<%= f.date_select :date_of_birth, {prompt: { day: 'Day', month: 'Month', year: 'Year' }, start_year: Date.today.year, end_year: 1910}, {:class => "form-control-3"} %>
			    	</div>
			    </div>
			    <div class="row form-group">
				  	<div class="col-xs-2">
			     		<%= label_tag :height_inches, "Height:" %>
			     	</div>
			     	<div id="height-attributes" class="col-xs-10">
			        <div class="col-xs-2">
			          <input type="number" name="user[height][feet]" placeholder="4" style="padding-left: 10%" value="<%=updated_user.height_hash['feet']%>"/> 
			        </div>
			        <div class="col-xs-2">
			          <%= label_tag :feet, "feet"%>
			        </div>
			        <div class="col-xs-2">
			          <input type="number" name="user[height][inches]" placeholder="11" style="padding-left: 10%" value="<%=updated_user.height_hash['inches']%>"/> 
			        </div>
			        <div class="col-xs-2">
							  <%= label_tag :inches, "inches"%>
			        </div>
		        </div>
		      </div>
		      <div class="row form-group">
				  	<div class="col-xs-2">
			     		<%= label_tag :weight_ounces, "Weight:" %>
			     	</div>
			     	<div id="weight-attributes" class="col-xs-10">
				     	<div class="col-xs-2">
			        	<%= f.input :weight_ounces, label: false, placeholder: "110", input_html: {value: ((updated_user.weight_ounces.to_i / 16)) } %>
			        </div>
		        	<div class="col-xs-2">
							  <%= label_tag :inches, "pounds"%>
			        </div>
		        	<div class="col-xs-6">
							  <p>(16 ounces in 1 pound)</p>
			        </div>
		        </div>
		      </div>
		      <div class="row form-group">
				  	<div class="col-xs-2">
			     		<%= label_tag :sex, "Sex:" %>
			     	</div>
			     	<div class="col-xs-10">
		        	<%= f.input :sex, :collection => [["Female", "Female"], ["Male", 'Male']], :label_method => :last, :value_method => :first ,as: :radio_buttons, :item_wrapper_class => 'radio-inline', label: false %>
	          </div>
		      </div>
	      	<div class="row form-group">
			      <div class="col-xs-12">
				      <label>Relation</label>
				      <%= f.input :family_role, label: false, placeholder: "Daughter", input_html: {id: "family-role-field", class: "form-control-6"} %>
			      </div>
		      </div>
      	</div>
				<%= render "users/registrations/forms/allergies", f: f %>
		  	<div class="col-xs-12 form-group">
			  	<label>Important Nutrition Information</label>
			  	<textarea class="form-control form-group" placeholder="Nutrition can be complicated and we know that first hand.  Use this space for specific nutrition information not mentioned above" name="user[family_note]" rows="4"><%=updated_user.family_note%></textarea>
			  </div>
			</div>
		</div>
		<div id="bottom-button-container" class="col-xs-12 text-center">
			<div class="hidden-xs hidden-sm col-md-8 col-lg-8 text-right">
				<p>Complete this nutrition profile</p>
			</div>
			<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-2 col-md-offset-0 col-lg-2 col-lg-offset-0">
				<div class="col-xs-12 col-sm-12 hidden-md hidden-lg text-center">
					<p>Complete this nutrition profile</p>
				</div>
	  		<%= f.button :submit, "Save", class: "btn btn-success btn-block" %>
			</div>
		</div>
	<% end %>
</div>