
<div class="modal fade" id="apptDetailModal" tabindex="-1" role="dialog" aria-labelledby="apptDetailModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="apptDetailModalLabel"><%=image_tag "/assets/nav_images/logo.png", class: "img-responsive" %></h4>
      </div>
      <%= simple_form_for(appointment) do |f| %>      
      <div class="modal-body col-xs-12">
        <h2>Client: <%=appointment.appointment_host.first_name%> <%=appointment.appointment_host.last_name%></h2>
        <h2>Patient: <%=appointment.patient_focus.first_name%> <%=appointment.patient_focus.last_name%></h2>
        <ul>
          <li><h3>Relation: <%=appointment.patient_focus.family_role%></h3></li>
          <li><h3>Age: <%=appointment.patient_focus.age%></h3></li>
          <li><h3>Height: <%=appointment.patient_focus.height%></h3></li>
          <li><h3>Weight: <%=appointment.patient_focus.weight%></h3></li>
          <li><h3>Health Groups:</h3>
            <% if appointment.patient_focus.patient_groups.count > 0 %>
            <ul>
              <% appointment.patient_focus.patient_groups.each do |health_group| %>
                <li> <%=health_group.name%></li>
              <% end %>
            </ul>
            <% end %>
          </li>
          <li><h3>Notes:</h3>
            <p><%=appointment.patient_focus.family_note%></p>
          </li>
        </ul>
        <h3>Family:</h3>
        <ul>
          <li><%=appointment.appointment_host.first_name%></li>
        <% appointment.appointment_host.head_of_families.first.users.each do |family_member| %>
          <li> <%=family_member.first_name%>: <%=family_member.age%> <%=family_member.family_role%></li>
        <% end %>
        </ul>
  
        <div class="col-xs-12 text-centerdi form-group">
          <h4>Time Slots This Week</h4>
          <table class="table">
            <thead>
              <tr>
                <th>Dietitian</th>
                <th>Vacant Times</th>
                <th>All Times</th>
                <th>Dietitian Slot Loss</th>
                <th>Client Slot Loss</th>
              </tr>
            </thead>
            <tbody>
 
              <% dietitians_data.each do | dietitian, data_object| %>

                <tr>
                  <td><%=dietitian.email%></td>
                  <td><%=data_object["half_hour_time_slots_available"][0]%></td>
                  <td><%=data_object["half_hour_time_slots_available"][1]%></td>
                  <td><%=data_object["loss_time_slots"] %></td>
                  <td><%=data_object["loss_cal_slots"] %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          
        </div>
        <h3>Select Dietitian</h3>
        <div class="col-xs-12">
          <%=f.input :dietitian_id, collection: dietitians, :label_method => :email, label: false, :input_html => { :class => "form-control"}   %>
        </div>
      </div>
      <div class="modal-footer">
        <div class="actions">
          <%= f.button :submit, "Assign KRDN", class: "btn btn-success btn-block", id: "btn-purchase-appt" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>