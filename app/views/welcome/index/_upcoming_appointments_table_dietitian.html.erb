<h3><span class="glyphicon glyphicon-calendar"></span>Upcoming Appointments</h3>
<div class="table-responsive">
	<table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Client</th>
        <th>Duration</th>
        <th>Date of Purchase</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
			<% if upcoming_appointments.count >= 1%>
				<% upcoming_appointments.each do |appointment| %>
					<tr>	
						<td>
							<%=appointment.start_time.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y %I:%M %p")%></td>
						<td><%= appointment.appointment_host_full_name%></td>
          	<td><%= appointment.show_duration%></td>

          	<td><%= appointment.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y %I:%M %p") %></td>

						<td><%= link_to "Prep", appointment_prep_path(appointment.id), class: "btn btn-small btn-primary" %></td>

						<% if appointment.room_id %>
							<td><%= link_to "Join", in_session_room_path(appointment.room_id, :appointment => appointment.id), class: "btn btn-small btn-default"%></td>
						<% end %>

        	</tr>
        <% end %>
			<% else %>
				<tr>
					<td>No upcoming appointments.</td>
				</tr>
      <% end %>
    </tbody>
  </table>
</div>

