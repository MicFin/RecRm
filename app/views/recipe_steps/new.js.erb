
// if a ingredient form is already present then replace it
if ($('.individual-step-form').length > 0) { 
	$(".individual-step-form").replaceWith("<%= j render(:partial => 'new_step_form') %>");
	// else add the new ingredient to a div meant to receieve it called individual ingredient form
} else {
	$(".individual-ingredient-form").append("<%= j render(:partial => 'recipe_steps/new_step_form') %>");
};


FormValidation.stepsValidations();
$("html, body").animate({ scrollTop: 0 }, "slow");
