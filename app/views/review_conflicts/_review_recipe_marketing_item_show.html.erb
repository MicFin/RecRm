<% if @possible_review_conflicts %>
  <% if @possible_review_conflicts["marketing-item-#{marketing_item.id}"].id %>
    <% @item = "marketing-item-#{marketing_item.id}" %>
    <% @review_conflict = @possible_review_conflicts[@item] %>
  <% end %>
<% end %>


<% if @review_conflict.risk_level == 1 %>
  <div id="<%=@item%>" class="col-xs-12 form-group alert alert-success">
    <h4>No Risk</h4>
<% elsif @review_conflict.risk_level == 2 %>
  <div id="<%=@item%>" class="col-xs-12 form-group alert alert-info">
    <h4>Low Risk</h4>
<% elsif @review_conflict.risk_level == 3 %>
  <div id="<%=@item%>" class="col-xs-12 form-group alert alert-warning">
    <h4>High Risk</h4>
<% elsif @review_conflict.risk_level == 4 %>
  <div id="<%=@item%>" class="col-xs-12 form-group alert alert-danger">
    <h4>Dangerous Risk</h4>
<% end %>
    <h3><%=@review_conflict.first_suggestion%></h3>
    <p><%= @review_conflict.first_reviewer_notes %></p>
    <div class=" col-xs-12 form-group text-center"> 
      <% if @select_reviewer != true %>
        <%= link_to "Edit Changes", edit_recipe_quality_review_review_conflict_path(@quality_reviewable, @quality_review, @review_conflict), class: "btn btn-success btn-lg", id: "basic-form-button", :remote => true%>
      <% else %>
        <h3><%=@review_conflict.second_suggestion%></h3>
        <p><%= @review_conflict.second_reviewer_notes %></p>
      <% end %>
    </div>
  </div>