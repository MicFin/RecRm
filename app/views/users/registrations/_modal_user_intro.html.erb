
<!-- Modal -->
<div class="modal fade" id="introModal" tabindex="-1" role="dialog" aria-labelledby="introModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="introModalLabel">Thank you for joining us!</h4>
      </div>
      <div class="modal-body">
				<div class="row">
					<div class="col-xs-10 col-xs-offset-1 text-center">
						<h4 class="intro-paragraph">After a few quick steps, we will have you scheduled to meet with one of our elite KindRDNutritionists, matched with you based on your family's health and nutrition needs.</h4> 
					</div>
				</div>
                <%= render "users/registrations/sign_up_breadcrumbs/sign_up_breadcrumb" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success btn-lg" data-dismiss="modal">Start</button>
      </div>
    </div>
  </div>
</div>