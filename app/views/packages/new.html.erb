
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Packages</h1>
			<%= render 'form' %>
    </div>
    <div class="col-xs-12">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Full Appts</th>
            <th>Half Appts</th>
            <th>Months until Expiration</th>
            <th>Full Price</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @packages.each do |package| %>
            <tr>
              <td><%= package.name %></td>
              <td><%= package.description %></td>
              <td><%= package.num_full_appointments %></td>
              <td><%= package.num_half_appointments %></td>
              <td><%= package.expiration_in_months %></td>
              <td><%= package.show_full_price %></td>
              <td><%= link_to 'Show', package %></td>
              <td><%= link_to 'Edit', edit_package_path(package) %></td>
              <td><%= link_to 'Delete', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


