
if ("<%=@item_category%>" === "title") {
	$('#marketing-title-<%=@patient_group_id%>').replaceWith("<%= j render(:partial => 'marketing_item_preview') %>");
	$('#marketing-item-<%=@patient_group_id%>-title').remove();
} else {
	$('#marketing-description-<%=@patient_group_id%>').replaceWith("<%= j render(:partial => 'marketing_item_preview') %>");
	$('#marketing-item-<%=@patient_group_id%>-description').remove();
};