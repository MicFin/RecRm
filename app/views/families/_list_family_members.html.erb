        <section class="row">
          <div class="col-xs-12">
            <p>Who eats at your table?  Create a profile for yourself and your entire family.  Help your dietitian understand what makes your family's table unique!</p>
            <%= link_to "Add family member", families_new_family_member_path(family.id), class: "btn btn-md btn-default", remote: true %>
          </div>
        </section>       

        <section id="family-members-container" class="row">
          <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center">
            <div class="col-xs-12">
              
              <%= link_to families_edit_family_member_path(family.id, user.id), remote: true do %>
                <% if user.main_avatar %>
                  <%= image_tag user.main_avatar.icon.url %>
                <% else %>
                  <%= image_tag "icons/add_user_photo.png" %>
                <% end %>
              
                <p><%= user.full_name%> (me)</p>
              <% end %>
                  <div class="col-xs-12 form-group">
                    <% if user.growth_chart %>
                      <%= link_to "Growth Chart", growth_chart_path(user.growth_chart), class: "btn btn-block btn-primary", remote: true %>
                    <% else %>
                      <%= render "/growth_charts/form", family_member: user %>
                    <% end %>
                  </div>
                  <div class="col-xs-12 form-group">
                    <% if user.food_diary %>
                      <%= link_to "Food Diary", food_diary_path(user.food_diary), class: "btn btn-block btn-primary", remote: true %>
                    <% else %>
                      <%= render "/food_diaries/form", family_member: user %>
                    <% end %>
                  </div>
            </div>
          </div>

          <% if family && family.users %>
            <% family.users.each.with_index(1) do |family_member, index| %>
              <% family_member = Users::UserPresenter.new(family_member) %>
              <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center">
                <div class="col-xs-12">
                  <%= link_to families_edit_family_member_path(family.id, family_member.id), remote: true do %>
   
                    <% if family_member.main_avatar && family_member.main_avatar.icon.url %>
                      <%= image_tag family_member.main_avatar.icon.url %>
                    <% else %>
                      <%= image_tag "icons/add_user_photo.png" %>
                    <% end %>
                    <p><%= family_member.full_name%> </p>
                  <% end %>
                
                  <div class="col-xs-12 form-group">
                    <% if family_member.growth_chart %>
                      <%= link_to "Growth Chart", growth_chart_path(family_member.growth_chart), class: "btn btn-block btn-primary", remote: true %>
                    <% else %>
                      <%= render "/growth_charts/form", family_member: family_member %>
                    <% end %>
                  </div>
                  <div class="col-xs-12 form-group">
                    <% if family_member.food_diary %>
                      <%= link_to "Food Diary", food_diary_path(family_member.food_diary), class: "btn btn-block btn-primary", remote: true %>
                    <% else %>
                      <%= render "/food_diaries/form", family_member: family_member %>
                    <% end %>
                  </div>

      
                </div>
              </div>
            <% end %>
          <% end %>
  






          <%# end %>

        </section>