



<div class="modal fade" id="signUpModal" tabindex="-1" role="dialog" aria-labelledby="signUpModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
<!-- 		no modal header -->
			<div class="modal-body">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title" id="signUpModalLabel"><%=image_tag "/assets/nav_images/logo.png", class: "img-responsive" %></h4>
	
				<div class="col-xs-12">
					<%= simple_form_for(@new_user, as: "user", url: user_registration_path, html: {class: 'form-inline col-xs-10 col-xs-offset-1', role:"form" }) do |f| %>
					<%#= render "/layouts/alerts" %>
					<div class="col-xs-12 form-group form-fields">
						<label for="exampleInputPassword2">Email</label>
						<%= f.email_field :email, autofocus: true, class: "form-control", type: "email", placeholder: "friend@dinner.com" %>
					</div>
					<div class="col-xs-12 form-group form-fields">
						<label for="exampleInputPassword2">Password</label>
						<%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "secret sauce", type: "password" %>
					</div>
					<div class="col-xs-12 form-group form-fields">
						<label for="exampleInputPassword2">Confirm Password</label>
						<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control",  placeholder: "secret sauce", type: "password"%>
					</div>
					<div class="col-xs-8 col-xs-offset-3 form-group">
						<%= f.button :submit, "Join Us!", class: "btn btn-success btn-sign-up", type: "submit" %>
					</div>
					<% end %>
					<!-- </form> -->
				</div>
			</div>
			<div class="modal-footer">
				<div class="actions">
				</div>
			</div>
		</div>
	</div>
</div>