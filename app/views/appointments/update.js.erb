<% if @appointment.status == "Follow Up Unpaid" %>

	// appointments/update.js.erb is called from the appointments#update method with a remote true or JS request that comes from next_session_form.html.erb if status of appointment is "Follow Up Unpaid"
	$("#next-session-container form").replaceWith("<%= j render(:partial => '/appointments/show_partial', :locals => {:appointment => @appointment}) %>");
	var dietitian_id = $("#dietitian-session-nav").data("dietitian-id");
	AvailabilityCalendar.review(dietitian_id);

<% else %>

	$("#tool-notes-container").empty().append("<%= j render(:partial => '/appointments/notes_form') %>")
	alert("saved");

<% end %>