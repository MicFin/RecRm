
<!-- Modal -->
<div class="modal fade" id="introModal" tabindex="-1" role="dialog" aria-labelledby="introModalLabel" aria-hidden="true" data-keyboard="false" data-backdrop="static">
  <div class="modal-dialog">
    <div id="intro-modal-main" class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="introModalLabel">Thank you for joining us!</h4>
      </div>
      <div class="modal-body">
				<div class="row">
					<div class="col-xs-10 col-xs-offset-1 text-center">
						<h4 class="intro-paragraph">After a few quick steps, we will have you scheduled to meet with one of our elite KindRDNutritionists, matched with you based on your family's health and nutrition needs.</h4> 
					</div>
				</div>
          <%= render "users/registrations/sign_up_breadcrumbs/sign_up_breadcrumb" %>
      </div>
      <div class="modal-footer">
        <button id="next-disclaimer-button" type="button" class="btn btn-success btn-lg" >Next</button>
      </div>
    </div>
    <div id="intro-modal-disclaimer" class="modal-content hidden">
      <div class="modal-header">
        <h4 class="modal-title" id="introModalLabel">Please read and confirm</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1  terms form-group">
            <%= render "/users/registrations/disclaimers/terms_of_service" %>
          </div>
          <div class="col-xs-10 col-xs-offset-1">
            <div class="checkbox">
              <label>
                <input class="disclaimer-checkbox" type="checkbox">I have read, understand and agree to the Terms of Service.
              </label>
            </div>
            <div class="checkbox">
              <label>
                <input class="disclaimer-checkbox" type="checkbox">I certify that I am 18 years of age or older.
              </label>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button id="exit-disclaimer-button" type="button" class="btn btn-success btn-lg hidden" data-dismiss="modal">Start</button>
      </div>
    </div>
  </div>
</div>