<% if @possible_review_conflicts %>
  <% if @possible_review_conflicts["recipe-categories"].id %>
    <% @review_conflict = @possible_review_conflicts["recipe-categories"] %>
    <% @recipe_categories_changes_array = @review_conflict.recipe_categories_changes_array%>
  <% end %>
<% else %>
  <% @recipe_categories_changes_array ||= @review_conflict.recipe_categories_changes_array %>
<% end %>




<% if @review_conflict.risk_level == 100 %>
  <div id="review-recipe-categories" class="col-xs-12 form-group alert alert-info">
    <h4>Low Risk</h4>
<% elsif @review_conflict.risk_level == 200 %>
  <div id="review-recipe-categories" class="col-xs-12 form-group alert alert-warning">
    <h4>Medium Risk</h4>
<% elsif @review_conflict.risk_level == 300 %>
  <div id="review-recipe-categories" class="col-xs-12 form-group alert  alert-danger">
    <h4>High Risk</h4>
<% end %>
    <label>Recipe Categories</label>
    <h4 class="ingredient-preview">Suggestion #1:</h4>
    <% if @recipe_categories_changes_array.count > 0 %>
      <% @recipe_categories_changes_array.each do |category| %>
        <p><%= category %></p>
      <% end %>
    <% else %>
      <p>This recipe should have no recipe categories</p>
    <% end %>
    </h4>
    <p class="form-group"><%= @review_conflict.second_reviewer_notes %></p>
    <% if @review_conflict.second_reviewer_id %>
      <h4 class="ingredient-preview">Suggestion #2:</h4>
      <% if @recipe_categories_changes_array_two.count > 0 %>
        <% @recipe_categories_changes_array_two.each do |category| %>
          <p><%= category %></p>
        <% end %>
      <% else %>
        <p>This recipe should have no recipe categories</p>
      <% end %>
      </h4>
      <p class="form-group"><%= @review_conflict.second_reviewer_notes %></p>
    <% end %>
    <% if @review_conflict.third_reviewer_id %>
      <h4 class="ingredient-preview">Suggestion #3:</h4>
      <% if @recipe_categories_changes_array_three.count > 0 %>
        <% @recipe_categories_changes_array_three.each do |category| %>
          <p><%= category %></p>
        <% end %>
      <% else %>
        <p>This recipe should have no recipe categories</p>
      <% end %>
      </h4>
      <p class="form-group"><%= @review_conflict.third_reviewer_notes %></p>
    <% end %>
    <% if @review_conflict.fourth_reviewer_id %>
      <h4 class="ingredient-preview">Suggestion #4:</h4>
      <% if @recipe_categories_changes_array_four.count > 0 %>
        <% @recipe_categories_changes_array_four.each do |category| %>
          <p><%= category %></p>
        <% end %>
      <% else %>
        <p>This recipe should have no recipe categories</p>
      <% end %>
      </h4>
      <p class="form-group"><%= @review_conflict.fourth_reviewer_notes %></p>
    <% end %>


    <div class=" col-xs-12 form-group text-center"> 
      <% if @select_reviewer != true %>
        <%= link_to "Edit Changes", edit_recipe_quality_review_review_conflict_path(@quality_reviewable, @quality_review, @review_conflict), class: "btn btn-success btn-lg", id: "basic-form-button", :remote => true%>
      <% end %>
    </div>
  </div>