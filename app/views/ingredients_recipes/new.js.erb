
// if a ingredient form is already present then replace it
if ($('.new-ingredient-form').length > 0) { 
	$(".new-ingredient-form").replaceWith("<%= j render(:partial => 'new_ingredient_form') %>");
	// else add the new ingredient to a div meant to receieve it called individual ingredient form
} else {
	$(".individual-ingredient-form").append("<%= j render(:partial => 'new_ingredient_form') %>");
}

