<h3><span class="glyphicon glyphicon-calendar"></span>Previous Appointments</h3>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Appointment Focus</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if previous_appointments.count >= 1%>
      <% previous_appointments.each do |appointment| %>
        <tr>  
          <td><%=appointment.start_time.strftime("%B %d, %Y %I:%M %p")%></td>

          <td><%= appointment.patient_focus.first_name%></td>

          <td><%= appointment.show_duration%></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td>No previous appointments.</td>
      </tr>

    <% end %>
  </tbody>
</table>
