<div id="recipe-background">
  <div class="container">
    <div class="col-xs-8 col-xs-offset-2">
      <div id="allergens-preview">
        <div id="review-recipe-container">
          <div class="col-xs-12">
            <div class="col-xs-6 col-xs-offset-3 alert alert-danger text-center">
              <h3>Last Step!</h3>
              <p>Please review all of the information before saving. Click the edit symbol to make changes.</p>
            </div>
          </div>
          <div class="panel-group" id="accordion">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a data-toggle="collapse" id="basic-info-accordion-top" data-parent="#accordion" href="#collapseOne">
                  <%= render "basic_info_show" %>
                  </a>
                </h4>
              </div>
            </div>
            <div id="collapseOne" class="panel-collapse collapse">
              <div class="panel-body" id="basic-info-accordion-bottom">
               <%= render "review_basic_info" %>
              </div>
            </div>
            <% @ingredients.each_with_index do | ingredient | %> 
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a data-toggle="collapse" id="ingredient-<%=ingredient.id%>-accordion-top" data-parent="#accordion" class="ingredient-collapse" href="#collapse-ingredient-<%=ingredient.id%>">
                  <%= render "show_recipe_ingredient", :ingredient => ingredient %>
                  </a>
                </h4>
              </div>
            </div>
            <div id="collapse-ingredient-<%=ingredient.id%>" class="panel-collapse collapse">
              <div class="panel-body" id="ingredient-<%=ingredient.id%>-accordion-bottom">
                <%= render "edit_recipe_ingredient", :ingredient => ingredient, :units => @units  %>
              </div>
            </div>
            <% end %>
            <div class="panel panel-default">
              <div class="panel-heading">
                  <%= render "/recipe_steps/steps_list" %>
              </div>
            </div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a data-toggle="collapse" data-parent="#accordion" href="#collapseFour">
                  </a>
                </h4>
              </div>
            </div>
            <div id="collapseFour" class="panel-collapse collapse">
              <div class="panel-body">
              </div>
            </div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a data-toggle="collapse" data-parent="#accordion" href="#collapseFive">
                  </a>
                </h4>
              </div>
            </div>
            <div id="collapseFive" class="panel-collapse collapse">
              <div class="panel-body">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>