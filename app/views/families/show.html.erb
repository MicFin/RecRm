                  <%= link_to families_edit_family_member_path(@family.id, family_member.id) do %>
                    <% if family_member.main_avatar %>
                      <%= image_tag family_member.main_avatar.icon.url %>
                    <% else %>
                      <%= image_tag "icons/add_user_photo.png" %>
                    <% end %>
                    <p><%= family_member.full_name%> </p>
                  <% end %>
                
                  <div class="col-xs-12 form-group">
                    <% if family_member.growth_chart %>
                      <%= link_to "Growth Chart", growth_chart_path(family_member.growth_chart), class: "btn btn-block btn-primary" %>
                    <% else %>
                      <%= render "/growth_charts/form", family_member: family_member %>
                    <% end %>
                  </div>
                  <div class="col-xs-12 form-group">
                    <% if family_member.food_diary %>
                      <%= link_to "Food Diary", food_diary_path(family_member.food_diary), class: "btn btn-block btn-primary" %>
                    <% else %>
                      <%= render "/food_diaries/form", family_member: family_member %>
                    <% end %>
                  </div>

      
                </div>
              </div>
            <% end %>
          <% end %>
  






