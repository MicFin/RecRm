<script type="text/javascript">
$(document).ready(function() {
  TokBox.initialize();
  $("#tool-notes").on("click", function(e){
    e.preventDefault();
    $(".tool-box-item").addClass("hidden");
    $("#tool-notes-container").removeClass("hidden");
  });
  $("#tool-products").on("click", function(e){
    e.preventDefault();
    $(".tool-box-item").addClass("hidden");
    $("#tool-products-container").removeClass("hidden");
  });
  $("#tool-shopping").on("click", function(e){
    e.preventDefault();
    $(".tool-box-item").addClass("hidden");
    $("#tool-shopping-container").removeClass("hidden");
  });

  $("#tool-client-info").on("click", function(e){
    e.preventDefault();
    $(".tool-box-item").addClass("hidden");
    $("#tool-client-info-container").removeClass("hidden");
    if ( !$("#new-user-family-form").length >= 1 ){
      var appointment_id = $(this).data("appt-id");
      $.ajax({
        type: "GET",
        datatype: "script",
        data: {modal: false},
        url: "/appointments/"+appointment_id+"/appointment_prep/",
        success: function(response){
          $(".family-member-health-container").css("min-height", function(){ 
            return $(window).height()-100;
          });

          // on family member view button click
          $(".family-member-health-preview").on("click", function(e){
            e.preventDefault();
            var family_member_id = $(this).data("family-member-id");
            // hide all info containers //
            $(".family-member-health-container").addClass("hidden");
            // remove selected-family-member class from all
            $(".family-member-health-preview").removeClass("selected-family-member");
            // add to selected
            $("#family-member-"+family_member_id).addClass("selected-family-member"); 
            // show new family members info  
            $("#family-member-health-"+family_member_id).removeClass("hidden");
            // remove active tab
            $(".active-tab").removeClass("active-tab");
            // add it to health button
            $("#family-member-health-button").parent().addClass("active-tab");
          });

          // on family member food button click
          $("#family-member-food-button").on("click", function(e){
            e.preventDefault();
            var active_id = $(".selected-family-member").data("family-member-id");
            if ($("#family-member-food-"+active_id).length >= 1){
              $(".family-member-health-container").addClass("hidden");
              $("#family-member-food-"+active_id).removeClass("hidden");
               $(".active-tab").removeClass("active-tab");
               $("#family-member-food-button").parent().addClass("active-tab");   
            } else {
              $.ajax({
                 type: "GET",
                 datatype: "script",
                 data: {survey_type: "User-Food", id: active_id, modal: false },
                 url: "/users/"+active_id+"/surveys/show",
                 success: function(response){
                   $(".family-member-health-container").css("min-height", function(){ 
                     return $(window).height()-100;
                   });
                   $(".active-tab").removeClass("active-tab");
                   $("#family-member-food-button").parent().addClass("active-tab");
                 } 
              })
            }
          });
          /// on family member health click
          $("#family-member-health-button").on("click", function(e){
            e.preventDefault();
            var active_id = $(".selected-family-member").data("family-member-id");
            $(".family-member-health-container").addClass("hidden");
            $("#family-member-health-"+active_id).removeClass("hidden");
            $(".active-tab").removeClass("active-tab");
            $("#family-member-health-button").parent().addClass("active-tab");
          });
          /// on family member life click
          $("#family-member-life-button").on("click", function(e){
            e.preventDefault();
            var active_id = $(".selected-family-member").data("family-member-id");
            if ($("#family-member-life-"+active_id).length >= 1){
              $(".family-member-health-container").addClass("hidden");
              $("#family-member-life-"+active_id).removeClass("hidden");
              $(".active-tab").removeClass("active-tab");
               $("#family-member-life-button").parent().addClass("active-tab");
            } else {
              $.ajax({
                 type: "GET",
                 datatype: "script",
                 data: {survey_type: "User-Life", id: active_id, modal: false},
                 url: "/users/"+active_id+"/surveys/show",
                 success: function(response){
                   $(".family-member-health-container").css("min-height", function(){ 
                     return $(window).height()-100;
                  });
                  $(".active-tab").removeClass("active-tab");
                  $("#family-member-life-button").parent().addClass("active-tab");
                 } 
              })
            }
          })
        } 
      })
    }
  })
});
</script>