<!-- MOBILE NAV BUTTON -->
<%= render "/layouts/navbars/mobile_nav_button" %>

<!-- USER NAV OPTIONS -->
<header id="sidebar-nav" class="sidebar-offcanvas">
	<!-- NAVIGATION HEADING -->
	<div class="row text-center">

		<!-- LOGO -->
		<div class="col-xs-12">
			<%=image_tag "/assets/logos/kindrdfood-web.png", class: "img-responsive img-logo" %>
		</div>

		<!-- LOG OUT -->
		<div class="col-sm-12">
			<p>Welcome, <%=current_dietitian.first_name%>!</p>
			<p><%= link_to "Log Out", destroy_dietitian_session_path, :method => :delete %></p>
		</div>
	</div>

	<!-- NAVIGATION LINKS -->
	<nav>	
		<ul>
			<li class="session-nav-video active">
				<a class="user-session-tool-video" href=""> <span class=" nav-item">Video</span></a>
			</li>
			<li class="session-nav-appointment-prep">
				<%=link_to family_path(family), remote: true do %>
					<span class=" nav-item">Client Family</span>
				<% end %>	

			</li>
			<li class="session-nav-goals">
				<%=link_to appointment_survey_path(appointment, pre_appt_survey), remote: true do %>
					<span class=" nav-item">Client Goals</span>
				<% end %>	
			</li>
			<li class="session-nav-notes">
				<%=link_to edit_appointment_survey_path(appointment, survey), remote: true do %>
					<span class=" nav-item">Notes</span>
				<% end %>	
			</li>
			<li>
				<a href=""><span class=" nav-item">Schedule a Follow Up</span></a>
			</li>
			<li>
				<a href=""><span class=" nav-item">Flag Session</span></a>
			</li> 

				<%#= link_to "End Session", end_dietitian_appointment_path(appointment), class: "btn btn-danger btn-block text-left", data: { confirm: 'Are you sure?' }, remote: true %>
				<button id="end-session-button" class="btn btn-danger btn-block text-left">End Session</button>
		</ul>
	</nav>
</header>
