<h1>Listing articles</h1>

<div class="media">
	<div class="media-body">
		<table class="table table-hover">
		  <thead>
		    <tr>
		      <th>Name</th>
		      <th>Content</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @articles.each do |article| %>
		      <tr>
		        <td><%= article.name %></td>
		        <td><%= article.content %></td>
		        <td><%= link_to 'Show', article, class: 'btn btn-mini btn-default' %></td>
		        <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-mini btn-success' %></td>
		        <td><%= link_to 'Destroy', article, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>
		<br>

		<%= link_to 'New Article', new_article_path %>
