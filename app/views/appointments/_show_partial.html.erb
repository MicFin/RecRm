<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Start Time</th>
        <th>End Time</th>
        <th colspan="2"></th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
          <td><%=appointment.start_time.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y %I:%M %p")%></td>
          <td><%=appointment.end_time.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y %I:%M %p")%></td>
          <td colspan="2"><%= link_to 'Edit', edit_appointment_path(appointment), remote: true %></td>
          <td colspan="2"><%= link_to 'Delete', appointment, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </tbody>
  </table>
</div>