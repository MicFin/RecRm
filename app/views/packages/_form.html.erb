<%= simple_form_for(@package) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :type %>
    <%= f.input :name %>
    <%= f.input :full_price %>
    <%= f.input :description %>
    <%= f.input :num_half_appointments %>
    <%= f.input :num_full_appointments %>
    <%= f.input :expiration_in_months %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
