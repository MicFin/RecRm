<div id="<%=@item%>" class="title-form col-xs-12">
  <%= simple_form_for [@quality_reviewable, @quality_review, @review_conflict], :remote => true, :html => {:multipart => true} do |f| %>
  <div class="col-xs-9 form-group">
    <% if @item.include? "title" %>
    <%= f.input :first_suggestion, label: "Recipe Title", input_html: { class: "form-control", placeholder: "Gluten Free Pasta Primavera", value: @review_conflict.first_suggestion} %>
    <% else %>
    <%= f.input :first_suggestion, label: "Recipe Description", input_html: { class: "form-control", placeholder: "Gluten Free Pasta Primavera", value: @review_conflict.first_suggestion} %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.input :category, as: :hidden, :input_html => { :value => "Marketing Item" }%>
    <%= f.input :item, as: :hidden, :input_html => { :value => @item }%>
  </div>
  <div class=" col-xs-12 form-group">
    <%= f.collection_radio_buttons :risk_level, [["Dangerous", 4], ["High Risk", 3], ["Low Risk", 2], ["No Risk", 1]], :last, :first, :item_wrapper_class=>"form-control" %>
  </div>
  <textarea class="form-control form-group" placeholder="Why did you make this improvement?" name="review_conflict[first_reviewer_notes]" rows="3"><%=@review_conflict.first_reviewer_notes%></textarea>
  <div class=" col-xs-12 form-group text-center"> 
    <%= f.button :submit, "Suggest Change", class: "btn btn-success btn-lg", type: "submit" %>
  </div> 
  <% end %>
</div>