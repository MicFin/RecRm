					  <% else %>

						<% end %>
					</div>
					<div class="profile-heading-signature">	
						<h1><%=@dietitian.signature%></h1>
						<p><em><%= @dietitian.location %></em></p>
					</div>
				</section>
				<section class="profile-content">
 					<div class="profile-content-left-column">	
 						<div class"row">
 							<div class="col-xs-12">
