	$("#tool-box-container #tool-client-info-container").empty().append("<%= j render(:partial => '/appointments/prep') %>");
<% else %>
	$("#appointmentPrepModal").remove();
	$("body").append("<%= j render(:partial => '/appointments/prep_modal') %>");
	$("#appointmentPrepModal").modal({
							backdrop: 'static',
	            keyboard: false
	    });;
<% end %>