if ($("#new-user-family-form.in-session").length >= 1){
	// in session updates
      $("#tool-box-container #tool-client-info-container").empty().append("<%= j render(:partial => '/rooms/user_rooms/family_form', :locals => {:family_members => @family_members, :appointment=> @appointment, :user=>@user, :allergies => @allergies, :diets=>@diets, :intolerances=>@intolerances, :diseases=> @diseases}) %>");
      // on family member view button click

      $(".family-member-health-preview").on("click", function(e){
  
        e.preventDefault();
        var family_member_id = $(this).data("family-member-id");
        // hide all info containers //
        $(".family-member-health-container").addClass("hidden");
        // remove selected-family-member class from all
        $(".family-member-health-preview").removeClass("selected-family-member");
        // add to selected
        $("#family-member-"+family_member_id).addClass("selected-family-member"); 
        // show new family members info  
        $("#family-member-health-"+family_member_id).removeClass("hidden");
        // remove active tab
        $(".active-tab").removeClass("active-tab");
        // add it to health button
        $("#family-member-health-button").parent().addClass("active-tab");
      });
} else {
		// update dring sign up
	$("#new-user-family-form").children().last().replaceWith("<%= j render(:partial => 'new_user_nutrition_complete') %>");
	$(".selected-family-member").removeClass("selected-family-member");

	$("#family-member-list").replaceWith("<%= j render(:partial => 'new_user_family_list', :locals => {:family_members => @family_members}) %>");
 }



