<h2>Change your password</h2>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.input :reset_password_token, :as => :hidden, :input_html => { :value => params[:reset_password_token] } %>
  <div><%= f.input :password, label: "New password", autofocus: true, autocomplete: "off" %></div>
  <div><%= f.input :password_confirmation, label: "Confirm new password", autocomplete: "off" %><br />

  <div><%= f.button :submit, "Change my password" %></div>
<% end %>
<%= render "devise/shared/links" %>