<h1>Listing packages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Full price</th>
      <th>Description</th>
      <th>Num full appointments</th>
      <th>Num half appointments</th>
      <th>Expiration in months</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.name %></td>
        <td><%= package.category %></td>
        <td><%= package.full_price %></td>
        <td><%= package.description %></td>
        <td><%= package.num_full_appointments %></td>
        <td><%= package.num_half_appointments %></td>
        <td><%= package.expiration_in_months %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Package', new_package_path %>
