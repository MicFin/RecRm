<!-- ALERTS -->
		<% if flash[:notice] %>
			<div class="col-xs-12 alert alert-success">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<%= flash[:notice] %>
			</div>
		<% elsif flash[:error] %>
			<div class="col-xs-12 alert alert-danger">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<%= flash[:error] %>
			</div>
		<% elsif flash[:alert] %>
			<div class="col-xs-12 alert alert-warning">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<%= flash[:alert] %>
			</div>
		<% end %>