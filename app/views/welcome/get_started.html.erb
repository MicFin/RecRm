<div id="get-started-page" >



<div id="myModal" class="modal fade in" style="display: block;">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-body">
             <h4 class="modal-title"></h4>
        <%= image_tag("/assets/landing_page/kindrdfood-logo.jpg", class: "img-responsive") %>
        <h1>Hi!  Ready to eat healthier?</h1>
        <h4>First, let's create your account.</h4>

					<%= simple_form_for(@user, :url => {:controller => 'users/registrations', :action => 'update'}, html: { method: :put, class: 'col-xs-10 col-xs-offset-1 text-left', role:"form" }) do |f| %>

					  <div class="form-group row">
					  	<div class="col-xs-6">
					    	<%= f.input :first_name, autofocus: true, input_html: { class: "form-control"} %>
					    </div>
							<div class="col-xs-6">
					    	<%= f.input :last_name, autofocus: true, input_html: { class: "form-control"} %>
					    </div>
					  </div>
					  <div class="form-group row">
					  	<div class="col-xs-6">
					    	<%= f.input :phone_number, autofocus: true, input_html: { class: "form-control"} %>
					   	</div>
	  					<div class="col-xs-6">
					    	<%= f.input :zip_code, autofocus: true, input_html: { class: "form-control"} %>
					    </div>
					  </div>
					  <div class="form-group">
					    <%= f.input :password, autocomplete: "off", input_html: { class: "form-control"} %>
					  </div>
					  <div class="form-group">
					    <%= f.input :password_confirmation, autocomplete: "off", input_html: { class: "form-control"} %>
					  </div>

					  <div class="actions text-right">
					    <%= f.button :submit, "Update", class: "btn btn-primary btn-lg" %>
					  </div>
					<% end %>

      </div>
      <div class="modal-footer">
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->	

</div>

