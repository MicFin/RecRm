<!DOCTYPE html>
<html>
<head>
  <title>Myapp</title>
  <%= include_gon %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
	<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.12.0/jquery.validate.js" type="text/javascript"></script>
</head>
<body>

<div class="container">
	
	<div class="nav nav-tabs">
		<% if current_user %>
			<li> <%= link_to 'HOME', user_authenticated_root_path %> </li>
			<li><%= link_to 'SIGN OUT', destroy_user_session_path, :method => :delete %></li>

		<% elsif current_dietitian %>
			<li> <%= link_to 'HOME', dietitian_recipes_path(current_dietitian) %> </li>
			<li><%= link_to 'SIGN OUT', destroy_dietitian_session_path, :method => :delete %></li>
		<% else %>
			<li> <%= link_to 'HOME', user_unauthenticated_root_path %> </li>
			<li> <%= link_to 'SIGN UP USER', new_user_registration_path %>  </li>
			<li> <%= link_to 'SIGN UP DIETITIAN', new_dietitian_registration_path %>  </li>
			<li> <%= link_to 'LOGIN USER',  new_user_session_path %>  </li>
			<li> <%= link_to 'LOGIN DIETITIAN',  new_dietitian_session_path %>  </li>
		<% end %>
	</div>

	<% if flash[:notice] %>
		<div class="alert alert-success">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<%= flash[:notice] %>
		</div>
	<% elsif flash[:error] %>
		<div class="alert alert-danger">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<%= flash[:error] %>
		</div>

	<% elsif flash[:alert] %>
		<div class="alert alert-warning">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<%= flash[:alert] %>
		</div>
	<% end %>

	<%= yield %>

</div>

</body>
</html>
