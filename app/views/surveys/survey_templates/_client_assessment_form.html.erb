<div id="family-page" class="container-fluid">
    <div class="row">

      <%= render "/layouts/navbars/main_navigation_column" %>

      <main class="col-xs-12 col-sm-10 col-sm-offset-2">
       <section class="alerts-container">
          <%= render "/layouts/alerts" %>
        </section>
        <section>
          <h1>Appoinment Assessment</h1>
        </section>
        <hr>
        <div class="dynamic-page-container">
          <section>
            <%= render "/surveys/survey_templates/appt_overview", surveyable: surveyable %>
          </section>
          <section class="surveys-container">
              <%= render "surveys/survey_templates/client_pre_appt_survey_item", surveyable: surveyable, survey: client_prep_survey %>
              <%= render("surveys/survey_templates/dietitian_pre_appt_survey_item", surveyable: surveyable, survey: dietitian_prep_survey) %> 
              <%= render("surveys/survey_templates/dietitian_appt_notes_item", surveyable: surveyable, survey: dietitian_notes) %>
          </section>
          <section>
            <%= render "/surveys/form", surveyable: surveyable, survey: survey, survey_group: survey_group, remote_boolean: false  %>       make this live for the client             
          </section>         
        </div>
      </main>
      <div class="col-xs-12 col-sm-10 col-sm-offset-2">
        <%=render "/layouts/footers/main_footer" %>
      </div>
    </div>
  </div>
