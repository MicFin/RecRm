<div class="row">
			<div class="col-xs-12">
				<h1>Tags</h1>		
		  </div>
			<section class="col-xs-12">
		    <%= render '/monologue/admin/tags/form', tag: @tag %> 	
		  </section>
		  <section class="col-xs-12">
		      <table class="table table-striped table-bordered datatable">
		        <thead>
		          <tr>
		            <th><%= t(".content_type")%></th>
 		            <th><%= t(".tag_category")%></th>
		            <th><%= t(".tag_name")%></th>
 		            <th><%= t(".browseable")%></th>
		            <th><%= t(".showcase")%></th>
		            <th><%= t(".showcase_position")%></th>
		            <th></th>
		            <th></th>
		          </tr>
		        </thead>
		        <tfoot>
		          <tr>
		            <th><%= t(".content_type")%></th>
		            <th><%= t(".tag_category")%></th>
		            <th><%= t(".tag_name")%></th>
		            <th><%= t(".browseable")%></th>
		            <th><%= t(".showcase")%></th>
		            <th><%= t(".showcase_position")%></th>
								<th></th>
		            <th></th>
		          </tr>
		        </tfoot>
		        <tbody>
		          <% @tags.each do |tag|%>
		            <tr> 
		              <td><%= tag.content_type %></td>
		              <td><%= tag.tag_category %></td>
		              <td><%= tag.name %></td>
		              <td><%= tag.browseable %></td>
		              <td><%= tag.showcase %></td>
		              <td><%= tag.showcase_position %></td>
		              <td><%= link_to t(".edit"), edit_admin_tag_path(tag), class: "btn btn-small" %></td>
		              <td><%= link_to t(".delete"), [:admin, tag],data: {confirm: 'Are you sure?'}, method: :delete, class: "btn btn-small btn-danger" %></td>
		            </tr>
		          <% end %>
		        </tbody>
		      </table>
		  </section>

	</div>
</div>







<script type="text/javascript">
  $(document).ready(function() {

    $(".datatable").DataTable({

        // select filter on footer
       initComplete: function () {
            this.api().columns().every( function () {

                var column = this;
                var select = $('<select><option value=""></option></select>')
                    .appendTo( $(column.footer()).empty() )
                    .on( 'change', function () {
                        var val = $.fn.dataTable.util.escapeRegex(
                            $(this).val()
                        );
 
                        column
                            .search( val ? '^'+val+'$' : '', true, false )
                            .draw();
                    } );
 
                column.data().unique().sort().each( function ( d, j ) {
                    select.append( '<option value="'+d+'">'+d+'</option>' )
                } );
            } );
        }
    });
  })
</script>






