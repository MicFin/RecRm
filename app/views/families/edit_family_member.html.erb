<div id="family-page" class="container-fluid">
    <div class="row">

      <%= render "/layouts/navbars/user_nav" %>

      <main class="col-xs-10 col-xs-offset-2">
        <div class="col-xs-2">
          <%= image_tag "icons/add_user_photo.png" %>
        </div>
        <div class="col-xs-10">
          <section>
            <h1><%=@family_member.full_name%> </h1>
          </section>
          <hr>
          <section class="row">
            <div class="col-xs-6">
              <h3>Background</h3>
              <table class="table borderless">
                <tr>
                  <th>Date of Birth: </th>
                  <td><%=@family_member.date_of_birth.to_s(:short_birth_date)%></td>
                </tr>
                <tr>
                  <th>Height:</th>
                  <td><%=@family_member.height%></td> 
                </tr> 
                <tr>
                  <th>Weight:</th>
                  <td><%=@family_member.weight%></td>
                </tr>
                <tr>
                  <th>Gender:</th>
                  <td><%=@family_member.sex%></td>
                </tr>
                <tr>
                  <th>Relationship:</th>
                  <td><%=@family_member.family_role%></td>
                </tr>
              </table>
            </div>
          </section>
          <section class="row">
            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center">
              <% @diseases.each do |disease| %>
                <h4><%=disease.name%></h4>
              <% end %>
            </div>
          </section>
          <section id="physician-container" class="row">
            <h3><span class="glyphicon glyphicon-briefcase"></span>Family Physicians</h3>
            <div class="col-xs-12 col-sm-5 col-md-3 col-lg-3">
              <p><b>Primary Care</b></p>
              <p>Dr. Liz Hait</p>
              <p>(781)985-6975</p>
              <p>1 Main Rd</p>
              <p>Cohasset, MA</p>
              <a href="">View</a>
            </div>
            <div class="col-xs-12 col-sm-5 col-md-3 col-lg-3">
              <p><b>Primary Care</b></p>
              <p>Dr. Liz Hait</p>
              <p>(781)985-6975</p>
              <p>1 Main Rd</p>
              <p>Cohasset, MA</p>
              <a href="">View</a>
            </div>
            <div class="col-xs-12 col-sm-5 col-md-3 col-lg-3">
              <button class="btn btn-default">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                  <span class="glyphicon glyphicon-briefcase"></span>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                  <p>ADD A </p>
                  <p>PHYSICIAN</p>
                </div>
              </button>
            </div>


          </section>
        </div>
      </main>
      <div class="col-xs-10 col-xs-offset-2">
        <%=render "/layouts/footers/main_footer" %>
      </div>
    </div>
  </div>
