<div id="get-started-page" class="veggies-background">

	<div id="getStartedModel" class="modal fade in" style="display: block;">
	  <div class="modal-dialog">
	    <div class="modal-content">

	      <div class="modal-body">
	       
	        <!--  REGISTRATION BREAD CRUMBS -->
	        <%= render "breadcrumbs" %>

	        <!--  HEADING -->
	        <h1>Ready to eat healthier?</h1>
	        <h4>Let's create your account.</h4>

	         <!-- 	USER FORM -->
					<%= simple_form_for(@user, :url => {:controller => 'users/registrations', :action => 'update'}, html: { method: :put, class: 'col-xs-10 col-xs-offset-1 text-left', role:"form" }) do |f| %>

					  <div class="form-group row">
					  	<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
					    	<%= f.input :first_name, autofocus: true, placeholder: 'Your first name', input_html: { class: "form-control"} %>
					    </div>
							<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
					    	<%= f.input :last_name, autofocus: true, placeholder: 'Your last name', input_html: { class: "form-control"} %>
					    </div>
					  </div>
					  <div class="row form-group">
				  		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			     			<%= label_tag :date_of_birth, "Date of Birth:" %>
			     		</div>
				     	<div class="col-xs-12">
				      	<%= f.date_select :date_of_birth, {prompt: { day: 'Day', month: 'Month', year: 'Year' }, start_year: Date.today.year, end_year: 1910, order: [:month, :day, :year]}, {:class => "form-control-3"} %>
				    	</div>
			    	</div>
					  <div class="form-group row">
							<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			     			<%= label_tag :sex, "Gender:" %>
			     		</div>
	  					<div class="col-xs-12">
					    	<%= f.input :sex, 
					    	:collection => [["female", 'Female'] ,["male", 'Male']],
					    	:label_method => :last, 
					    	:value_method => :first,
					    	:as => :radio_buttons_inline,
					    	:label => false %>

					    </div>
					  </div>
					  <div class="form-group row">
					  	<div class="col-xs-12">
					    	<%= f.input :email, input_html: { class: "form-control"}  %>
					    </div>
					  </div>
 						<div class="form-group row">
					  	<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
					    	<%= f.input :phone_number, placeholder: '1(###)###-####', autofocus: true, input_html: { class: "form-control"} %>
					  		<span id="contact-info-privacy" data-toggle="popover" data-container="form" data-html="true" title="Contact Information" data-content="Your <strong>timezone</strong> and <strong>zip code</strong> help us match you with a Kindrd Nutritionist that understands your schedule and area.  Your Kindrd Nutritionist can call you by <strong>phone</strong> if there are difficulties connecting by video.  We take your privacy very seriously, please see our <a class='privacy-modal-link'>Privacy Policy</a> for more." class="glyphicon glyphicon-info-sign"></span> 
					   	</div>
	  					<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
					    	<%= f.input :zip_code, placeholder: '#####', autofocus: true, input_html: { class: "form-control"} %>
					    </div>
			
					  </div>

						<div class="form-group row">
					  	<div class="col-xs-12">
					  	    <%= f.input :time_zone, priority: /US/, :input_html => { class: "form-control"}, autofocus: true %>
					    </div>
				    </div>
					 
					  <div class="actions text-right">
					    <%= f.button :submit, "Next", class: "btn btn-primary btn-lg" %>
					  </div>
					<% end %>

	      </div>
	      <div class="modal-footer">
	      </div>
	    </div><!-- /.modal-content -->
	  </div><!-- /.modal-dialog -->
	</div><!-- /.modal -->	

</div>

<%= render "/landing_pages/privacy_modal"%>
