    <div class="row">

      <%= render "/layouts/navbars/user_nav" %>

      <main class="col-xs-10 col-xs-offset-2">
       <section class="alerts-container">
          <%= render "/layouts/alerts" %>
        </section>
        <section>
          <h1>The <%=@family.name%> Family</h1>
        </section>
        <hr>
        <section class="row">
          <p>Who eats at your table?  Create a profile for yourself and your entire family.  Help your dietitian understand what makes your family's table unique!</p>
          <%= link_to "Add family member", families_new_family_member_path(@family.id), class: "btn btn-md btn-default" %>
          <!-- <button class="btn btn-primary">Add Family Member</button> -->
        </section>
        <section id="family-members-container" class="row">
          <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center">
            <div class="col-xs-12">
              
              <%= link_to families_edit_family_member_path(@family.id, @user.id) do %>
                <% if @user.main_avatar %>
                  <%= image_tag @user.main_avatar.icon.url %>
                <% else %>
                  <%= image_tag "icons/add_user_photo.png" %>
                <% end %>
              
                <p><%= @user.full_name%> </p>
                <p>(me)</p>
              <% end %>
                  <div class="col-xs-12 form-group">
                    <% if @user.growth_chart %>
                      <%= link_to "Growth Chart", growth_chart_path(@user.growth_chart), class: "btn btn-block btn-primary" %>
                    <% else %>
                      <%= render "/growth_charts/form", family_member: @user %>
                    <% end %>
                  </div>
                  <div class="col-xs-12 form-group">
                    <% if @user.food_diary %>
                      <%= link_to "Food Diary", food_diary_path(@user.food_diary), class: "btn btn-block btn-primary" %>
                    <% else %>
                      <%= render "/food_diaries/form", family_member: @user %>
                    <% end %>
                  </div>
            </div>
          </div>
          <%# @family.family_members.each do |family_member| %>
          <% if @family && @family.children %>
            <% @family.children.each.with_index(1) do |family_member, index| %>
              <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center">
