
<div id="get-started-page" class="fork-background" >

	<div id="addNutritionModel" class="modal fade in" style="display: block;">
	  <div class="modal-dialog">
	    <div class="modal-content">

	      <div class="modal-body">
	        <%= image_tag("/assets/logos/kf-logo-registration.png", class: "img-responsive logo") %>
	        <h1>Click on all that apply.</h1>
	        <h4>To deselect, simply click on the square again.</h4>
					
					<%= simple_form_for(@user, :url => {:controller => 'welcome', :action => 'build_nutrition'}, html: { method: :patch, class: 'col-xs-12 text-center', role:"form" }) do |f| %>

						<div id="health-group-container" class="row">
						  <%=	f.collection_check_boxes :patient_group_ids, @diseases, :id, :name %>
						 		<div id="add-disease-button" class="add-another-disease">Add Another</div>
						 		<div id="add-disease-form" class="add-another-disease-form hidden">
							 		<input id="new-health-group-field" type="text" placeholder="Autism" class="form-control-12"/>
							 		<button id="new-health-group-button" class="btn btn-block btn-warning">Add</button>

						 		</div>
						</div>

					  <div class="actions text-right">
					    <%= f.button :submit, "Next", class: "btn btn-primary btn-lg" %>
					  </div>
					<% end %>
			
	      </div>
	      <div class="modal-footer">
	      </div>
	    </div><!-- /.modal-content -->
	  </div><!-- /.modal-dialog -->
	</div><!-- /.modal -->	

</div>


